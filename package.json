{
  "name": "ngx-form-control-errors",
  "version": "17.1.0",
  "description": "A directive for showing errors in Angular form controls in reactive forms",
  "keywords": [
    "angular",
    "form",
    "control",
    "errors",
    "reactive",
    "forms",
    "formcontrol",
    "directive",
    "messages"
  ],
  "license": "MIT",
  "author": {
    "name": "Dennys Gonz√°lez",
    "email": "dgonzalez870@yahoo.com"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test:core": "npx ng test ngx-formcontrol-errors-msgs --no-watch --no-progress --browsers=ChromeHeadless",
    "test:translate": "npx ng test ngx-formcontrol-msgs-translate-parser --no-watch --no-progress --browsers=ChromeHeadless",
    "test:translate-demo-app": "npx ng test ngx-translate-demo-app --no-watch --no-progress --browsers=ChromeHeadless",
    "build:core": "npx ng build -c production ngx-formcontrol-errors-msgs && cp README.md LICENSE ./dist/ngx-formcontrol-errors-msgs/",
    "build:translate": "npx ng build -c production ngx-formcontrol-msgs-translate-parser && cp LICENSE ./dist/ngx-formcontrol-msgs-translate-parser/",
    "build:styles": "npx ng build -c production demo-styles",
    "build:main:gp": "npx ng build -c github-pages",
    "build:translate:gp": "npx ng build ngx-translate-demo-app -c github-pages && mv ./dist/ngx-translate-demo-app/browser ./dist/ngx-form-control-errors/browser/ngx-translate-demo-app",
    "build:i18n:gp": "npx ng build angular-i18n-demo -c github-pages && mv ./dist/angular-i18n-demo/browser ./dist/ngx-form-control-errors/browser/angular-i18n-demo",
    "build:github-pages": "npm run build:styles && npm run build:main:gp && npm run build:translate:gp && npm run build:i18n:gp",
    "coverage-badges:core": "npx coverage-badges --source coverage/ngx-formcontrol-errors-msgs/coverage-summary.json --output dist/ngx-form-control-errors/browser/core-coverage-badge.svg",
    "coverage-badges:translate": "npx coverage-badges --source coverage/ngx-formcontrol-msgs-translate-parser/coverage-summary.json --output dist/ngx-form-control-errors/browser/translate-coverage-badge.svg",
    "coverage-badges": "npm run coverage-badges:core && npm run coverage-badges:translate",
    "publish:core": "npm run test:core && npm run build:core && cd ./dist/ngx-formcontrol-errors-msgs && npm publish",
    "publish:translate": "npm run test:translate && npm run build:translate && cd ./dist/ngx-formcontrol-msgs-translate-parser && npm publish",
    "extract-i18n": "npx ng extract-i18n --project angular-i18n-demo --output-path ./projects/angular-i18n-demo/src/assets/i18n/",
    "watch": "ng build --watch --configuration development",
    "test": "npx ng test  --no-watch --no-progress --browsers=ChromeHeadless",
    "prepare": "husky",
    "lint": "ng lint",
    "docs": "npx typedoc --out ./tmp/docs --entryPointStrategy expand ./projects/ngx-formcontrol-errors-msgs/src",
    "release": "npx commit-and-tag-version"
  },
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "highlight.js": "^11.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.3",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.2.3",
    "@angular/compiler-cli": "^17.2.0",
    "@angular/localize": "^17.2.4",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "commit-and-tag-version": "^12.2.0",
    "coverage-badges-cli": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.2.0",
    "typedoc": "^0.25.12",
    "typescript": "~5.3.2"
  }
}
