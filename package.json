{
  "name": "ngx-form-control-errors",
  "version": "0.0.1-2",
  "description": "A directive for showing errors in Angular form controls in reactive forms",
  "keywords": [
    "angular",
    "form",
    "control",
    "errors",
    "reactive",
    "forms",
    "formcontrol",
    "directive",
    "messages"
  ],
  "license": "MIT",
  "author": {
    "name": "Dennys Gonz√°lez",
    "email": "dgonzalez870@yahoo.com"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:core": "npx ng build -c production ngx-formcontrol-errors",
    "build:translate": "npx ng build -c production ngx-formcontrol-msgs-translate-parser",
    "publish:core": "cp README.md LICENSE ./dist/ngx-formcontrol-errors/ && cd ./dist/ngx-formcontrol-errors && npm publish --dry-run",
    "publish:translate": "cp README.md LICENSE ./dist/ngx-formcontrol-msgs-translate-parser/ && cd ./dist/ngx-formcontrol-msgs-translate-parser && npm publish --dry-run",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prepare": "husky",
    "lint": "ng lint",
    "docs": "npx typedoc --out ./tmp/docs --entryPointStrategy expand ./projects/ngx-formcontrol-errors/src",
    "release": "npx commit-and-tag-version"
  },
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "highlight.js": "^11.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.3",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.2.3",
    "@angular/compiler-cli": "^17.2.0",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "commit-and-tag-version": "^12.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.2.0",
    "typedoc": "^0.25.12",
    "typescript": "~5.3.2"
  }
}
